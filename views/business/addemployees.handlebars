        <div class="col-md-6">
            <div class="box box-success">
                <div class="box-header with-border">
                    <h3 class="box-title">Employees - registered</h3>
                </div>
                <div class="box-body">
                    <table class="table table-striped" id="registeredEmployees">
                        <tbody>
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Phone</th>
                            </tr>
                            {{#each signed}}
                            <tr>
                                <td>{{fname}} {{lname}}</td>
                                <td>{{email}}</td>
                                <td>{{phone}}</td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="box box-danger">
                <div class="box-header with-border">
                    <h3 class="box-title">Employees - not registered</h3>
                </div>
                <div class="box-body">
                    <table class="table table-striped" id="notRegisteredEmployees">
                        <tbody>
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Phone</th>
                            </tr>
                            {{#each notsigned}}
                            <tr>
                                <td>{{fname}} {{lname}}</td>
                                <td>{{email}}</td>
                                <td>{{phone}}</td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <button id="add-employee-show">+</button>
        <script>
            document.getElementById('add-employee-show').addEventListener('click', function() {
                document.getElementById('add-employee-modal').style.display = 'block';
            });

            var closers = document.getElementsByClassName('add-employee-hide');
            for (var i=0, len=closers.length; i<len; i++) {
                closers[i].addEventListener('click', function() {
                    document.getElementById('add-employee-modal').style.display = 'none';
                });
            }
        </script>
</section>
