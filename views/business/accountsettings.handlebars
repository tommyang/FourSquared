        <!-- Row 3 -->
        <!-- Change company info -->
        <div class="row">
            <div class="col-md-8">
                <div class="box box-primary">
                    <div class="box-header with-border" >
                        <h3 class='box-title'>Company Info</h3>
                        <p style="color:grey">Configure other parts of your company account.</p>
                    </div>
                    <form class="" action="/businesssetting" method="post">
                        <div class='box-body'>
                            <div class="form-group">
                                <label >Company Name</label>
                                <input type="text" id="companyName" name="companyName" class="form-control input-lg" value="{{companyName}}" required>
                            </div>
                            <div class="form-group">
                                <label >Phone Number</label>
                                <input type="text" id="phone" name ="phone"class="form-control input-lg" value="{{companyPhone}}" required>
                            </div>
                        </div>
